@page
@model FE.Pages.Admin.MilkAgeManagement.CreateModel
@{
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Tạo nhóm tuổi
    </div>
    <form id="createForm" method="post" class="m-3">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="mb-3">
                <label  class="form-label">Từ: </label>
                <input type="number" class="form-control" required asp-for="CreateMilkAgeRequest.Min">
            </div>
        </div>
        <div class="form-group row">
            <div class="mb-3">
                <label class="form-label">Đến: </label>
                <input type="number" class="form-control" required asp-for="CreateMilkAgeRequest.Max">
            </div>
        </div>
        <div class="form-group row">
            <div class="mb-3">
                <label class="form-label">Đơn vị: </label>
                <input type="text" class="form-control" required asp-for="CreateMilkAgeRequest.Unit">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="createBrand">Tạo</button>
        </div>
    </form>
</div>
