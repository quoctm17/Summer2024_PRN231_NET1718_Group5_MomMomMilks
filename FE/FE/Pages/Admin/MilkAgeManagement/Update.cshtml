@page
@model FE.Pages.Admin.MilkAgeManagement.UpdateModel
@{
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Cập nhật nhóm tuổi
    </div>
    <form id="createForm" method="post" class="m-3">
        <div class="text-danger" asp-validation-summary="All"></div>
        <input type="text" class="form-control" hidden required id="createId" asp-for="UpdateMilkAgeRequest.Id">
        <div class="form-group row">
            <div class="mb-3">
                <label class="form-label">Từ: </label>
                <input type="number" class="form-control" required asp-for="UpdateMilkAgeRequest.Min">
            </div>
        </div>
        <div class="form-group row">
            <div class="mb-3">
                <label class="form-label">Đến: </label>
                <input type="number" class="form-control" required asp-for="UpdateMilkAgeRequest.Max">
            </div>
        </div>
        <div class="form-group row">
            <div class="mb-3">
                <label class="form-label">Đơn vị: </label>
                <input type="text" class="form-control" required asp-for="UpdateMilkAgeRequest.Unit">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="createBrand">Cập nhật</button>
        </div>
    </form>
    <form method="post" class="m-3" asp-page-handler="Delete">
        <input type="text" class="form-control" hidden required asp-for="UpdateMilkAgeRequest.Id">
        <div class="form-group">
            <button type="submit" class="btn btn-danger">Xoá</button>
        </div>
    </form>
</div>
