@page
@model FE.Pages.Admin.SupplierManagement.CreateModel
@{
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Thêm Nhà cung cấp
    </div>
    <form id="createForm" method="post" class="m-3">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">
            <div class="mb-3">
                <label for="createName" class="form-label">Tên nhà cung cấp: </label>
                <input type="text" class="form-control" required id="createName" asp-for="CreateSupplierRequest.Name">
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="createBrand">Tạo</button>
        </div>
    </form>
</div>