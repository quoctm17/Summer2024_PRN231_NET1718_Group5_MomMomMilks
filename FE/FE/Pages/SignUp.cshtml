@page
@model FE.Pages.SignUpModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <link rel="stylesheet" type="text/css" href="vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animate/animate.css">
    <link rel="stylesheet" type="text/css" href="vendor/css-hamburgers/hamburgers.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/animsition/css/animsition.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/select2/select2.min.css">
    <link rel="stylesheet" type="text/css" href="vendor/daterangepicker/daterangepicker.css">
    <link rel="stylesheet" type="text/css" href="css/util.css">
    <link rel="stylesheet" type="text/css" href="css/main.css">
</head>

<body style="background-color: #666666;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form method="post" class="login100-form validate-form">
                    <span class="login100-form-title p-b-43">
                        Đăng ký
                    </span>

                    <div class="text-danger" asp-validation-summary="All"></div>
                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="email" asp-for="Register.Email">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                        <span class="text-danger" asp-validation-for="Register.Email"></span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" asp-for="Register.UserName">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Tên</span>
                        <span class="text-danger" asp-validation-for="Register.UserName"></span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="text" asp-for="Register.PhoneNumber">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Số điện thoại</span>
                        <span class="text-danger" asp-validation-for="Register.PhoneNumber"></span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="password" asp-for="Register.Password">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Mật khẩu</span>
                        <span class="text-danger" asp-validation-for="Register.Password"></span>
                    </div>

                    <div class="wrap-input100 validate-input">
                        <input class="input100" type="password" asp-for="Register.ConfirmedPassword">
                        <span class="focus-input100"></span>
                        <span class="label-input100">Xác nhận mật khẩu</span>
                        <span class="text-danger" asp-validation-for="Register.ConfirmedPassword"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn" type="submit">
                            Đăng ký
                        </button>
                    </div>

                    <div class="text-center p-t-46 p-b-20">
                        <span class="txt2">
                            hoặc <a href="/Login">đăng nhập tại đây</a>
                        </span>
                    </div>
                </form>

                <div class="login100-more" style="background-image: url('img/bg-01.jpg');">
                </div>
            </div>
        </div>
    </div>





    <script src="vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="vendor/animsition/js/animsition.min.js"></script>
    <script src="vendor/bootstrap/js/popper.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="vendor/select2/select2.min.js"></script>
    <script src="vendor/daterangepicker/moment.min.js"></script>
    <script src="vendor/daterangepicker/daterangepicker.js"></script>
    <script src="vendor/countdowntime/countdowntime.js"></script>
    <script src="js/main.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Function to check input fields and add filled class if needed
            function checkInputs() {
                var inputs = document.querySelectorAll('.input100');

                inputs.forEach(function (input) {
                    if (input.value.trim() !== "") {
                        input.classList.add('has-val');
                    } else {
                        input.classList.remove('has-val');
                    }
                });
            }

            // Check inputs on page load
            checkInputs();

            // Add event listener to update class on input change
            var inputs = document.querySelectorAll('.input100');
            inputs.forEach(function (input) {
                input.addEventListener('blur', function () {
                    if (input.value.trim() !== "") {
                        input.classList.add('has-val');
                    } else {
                        input.classList.remove('has-val');
                    }
                });
            });
        });
    </script>

</body>
</html>